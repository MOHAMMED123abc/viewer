        .water { width: 100%; position: absolute; bottom: 0; background: linear-gradient(180deg, #38bdf8 0%, #0284c7 100%); transition: all 1.5s cubic-bezier(0.4, 0, 0.2, 1); box-shadow: 0 0 20px rgba(56, 189, 248, 0.5); }
