  <script src="https://www.gstatic.com/firebasejs/9.22.2/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.22.2/firebase-database-compat.js"></script>

  <script>
    const firebaseConfig = {
      apiKey: "AIzaSyAYge0HyYiL0-vlXnnlB_FqAZvocb_lz9Y",
      databaseURL: "https://esp32-tank-project-default-rtdb.europe-west1.firebasedatabase.app"
    };
    
    firebase.initializeApp(firebaseConfig);
    const db = firebase.database();

    // استخراج ID الجهاز من الرابط
    const urlParams = new URLSearchParams(window.location.search);
    const deviceId = urlParams.get('device') || 'device0002';
    document.getElementById('devID').textContent = deviceId;

    // المراقبة - تم تغيير المسار ليطابق Firebase تماماً
    const deviceRef = db.ref(`${deviceId}`);

    deviceRef.on("value", (snapshot) => {
      const data = snapshot.val();
      if (data) {
        // تحديث النسبة المئوية
        const tank = data.tank || 0;
        document.getElementById('tankValue').innerText = tank;
        document.getElementById('waterLevel').style.height = tank + "%";
        
        // تحديث البطارية
    //    document.getElementById('battValue').innerText = (data.battery || 0) + "%";

// --- الإضافات الجديدة ---

        // تحديث ارتفاع الماء الحقيقي
if (data.water_height !== undefined) {
    document.getElementById('waterHeight').innerText = data.water_height.toFixed(1);
}

        // 2. تحديث وتحويل الوقت (توقيت الجزائر)
        if (data.last_seen) {
          const date = new Date(data.last_seen);
          // تنسيق الوقت ليناسب الجزائر (UTC+1) بشكل تلقائي حسب لغة المتصفح
          const options = { 
            hour: '2-digit', 
            minute: '2-digit', 
            second: '2-digit',
            day: '2-digit', 
            month: '2-digit',
            year: 'numeric'
          };
          document.getElementById('lastSeen').innerText = date.toLocaleString('fr-FR', options);
        }

        
        // تحديث إعدادات الـ Config
        if(data.config) {
          document.getElementById('totalH').innerText = data.config.totalHeight || "--";
          document.getElementById('offsetV').innerText = data.config.sensorOffset || "--";
        }

        // تغيير لون الماء بناء على المستوى
        const waterColor = document.getElementById('waterLevel');
        if(tank < 20) waterColor.style.filter = "hue-rotate(300deg)"; // أحمر للتحذير
        else waterColor.style.filter = "hue-rotate(0deg)";

// نظام تنبيه بصري
if(tank < 10) {
    document.getElementById('tankValue').classList.add('animate-pulse', 'text-red-500');
    document.getElementById('tankValue').classList.remove('text-white');
} else {
    document.getElementById('tankValue').classList.remove('animate-pulse', 'text-red-500');
    document.getElementById('tankValue').classList.add('text-white');
}

              
      }
    }, (error) => {
      console.error("Firebase Error:", error);
      
      document.getElementById('status').className = "text-red-500 font-bold";
    });
  </script>
